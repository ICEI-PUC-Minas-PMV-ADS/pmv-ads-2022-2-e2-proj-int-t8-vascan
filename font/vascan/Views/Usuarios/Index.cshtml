@model LoginModel
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/vascanlogin.css">
    <title>@ViewData["Title"]Vascan</title>
</head>
<body>
    <div class="login">
        <div class="login-esquerda">
            <img src="~/img/imgCinza.webp" alt="" class="imgLogin">
            <div class="texto">
            <h1>Bem-vindos <br> ao <br><br> VASCAN</h1>
            </div>
        </div>
        <div class="login-direita">
            <form asp-controller="Login" asp-action="Entrar" method="post" id="formulario">
            <div class="box">
                <fieldset class="caixa">
                    <div class="input-box">
                        <label for="Login" class="label-input" id="label-login">Usuário</label>
                        <input type="text" name="Login" id="Login" asp-for="Login" class="input-login" required>
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                    <br><br>
                    <div class="input-box">
                        <label for="Senha" class="label-input" id="label-senha">Senha</label>
                        <input type="password" name="Senha" id="Senha" asp-for="Senha" class="input-login" required>  
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>
                    <br><br><br><br>
                    <div class="input-select">
                        <label for="selectUser" class="label-input" id="selectUser">Tipo de Usuário</label>
                        <select name="Tipo" class="select-input" required>
                        <label for="userType">Tipo de Usuário</label>
                        <option value="" id="selecionar">Selecione o Usuário</option>
                        <option value="aluno">Aluno</option>
                        <option value="professor">Professor</option>
                        <option value="secretario">Secretário</option>
                        @Html.ValidationMessageFor(x => x.Tipo)
                    </select>
                    </div>
                    <br><br><br>
                    <button class="botaoLogin" type="submit">Entrar</button>
                </fieldset>
            </div>
            </form>
        </div>
    </div>
    <script src="~/js/submit.js"></script>
    @RenderBody()
</body>
</html>