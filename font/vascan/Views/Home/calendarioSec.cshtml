        <div class="btn-ocultar">
            <i class="bi bi-box-arrow-right" aria-hidden="true"></i>
            <span class="ocultar">Ocultar</span>
        </div>
    </nav>


    <!--Aqui começa o "Corpo" da página-->

    <!--Cabeçalho-->
    <header class="body-cabecalho">
        <h1 class="title">Secretaria</h1>
        <a class="sair" asp-controller="Login" asp-action="Index"
        >Sair</a>
    </header>

    <!--Corpo-->
    <div class="body">


        <main class="container-principal">
            <div class="accordion accordion-flush" id="accordionFlushExample">

                <button class="btn-addEvento">Adicionar Evento</button>

                <div class="eventos-calendario-container">
                    <div id="semestre1" class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseOne" aria-expanded="false"
                                aria-controls="flush-collapseOne">
                                1° Semestre
                            </button>
                        </h2>

                        <div id="flush-collapseOne" class="accordion-collapse collapse"
                            aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">

                            <div class="accordion-body">
                                <div class="evento-item">
                                    <p class="data-item">19/09 a 23/09</p>
                                    <p class="nome-item">Recesso escolar</p>

                                    <button class="btn-editar-item"><i class="bi bi-pencil-square"></i></button>

                                    <button class="btn-editar-item"><i class="bi bi-trash-fill"></i></button>
                                </div>
                                <div class="evento-item">
                                    <p class="data-item">19/09 a 23/09</p>
                                    <p class="nome-item">Recesso escolar</p>

                                    <button class="btn-editar-item"><i class="bi bi-pencil-square"></i></button>

                                    <button class="btn-editar-item"><i class="bi bi-trash-fill"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div id="semestre2" class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseTwo" aria-expanded="false"
                                aria-controls="flush-collapseTwo">
                                2° Semestre
                            </button>
                        </h2>

                        <div id="flush-collapseTwo" class="accordion-collapse collapse"
                            aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <div class="evento-item">
                                    <p class="data-item">19/09 a 23/09</p>
                                    <p class="nome-item">Recesso escolar</p>

                                    <button class="btn-editar-item"><i class="bi bi-pencil-square"></i></button>

                                    <button class="btn-editar-item"><i class="bi bi-trash-fill"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="periodo-escolar" class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseThree" aria-expanded="false"
                                aria-controls="flush-collapseThree">
                                Período Escolar
                            </button>
                        </h2>

                        <div id="flush-collapseThree" class="accordion-collapse collapse"
                            aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <div class="evento-item">
                                    <p class="data-item">19/09 a 23/09</p>
                                    <p class="nome-item">Recesso escolar</p>

                                    <button class="btn-editar-item"><i class="bi bi-pencil-square"></i></button>

                                    <button class="btn-editar-item"><i class="bi bi-trash-fill"></i></button>
                                </div>
                                <div class="evento-item">
                                    <p class="data-item">19/09 a 23/09</p>
                                    <p class="nome-item">Recesso escolar</p>

                                    <button class="btn-editar-item"><i class="bi bi-pencil-square"></i></button>

                                    <button class="btn-editar-item"><i class="bi bi-trash-fill"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>

        <aside class="container-aside">
            <div class="">
                <div id="container">
                    <div id="header">
                        <div>
                            <button id="backButton"><i class="bi bi-caret-left-fill"></i></button>
                        </div>

                        <div id="monthDisplay"></div>

                        <div>
                            <button id="nextButton"><i class="bi bi-caret-right-fill"></i></button>
                        </div>
                    </div>

                    <div id="weekdays">
                        <div>Dom</div>
                        <div>Seg</div>
                        <div>Ter</div>
                        <div>Qua</div>
                        <div>Qui</div>
                        <div>Sex</div>
                        <div>Sáb</div>
                    </div>


                    <!-- div dinamic -->
                    <div id="calendar"></div>


                </div>

                <div id="newEventModal">
                    <h2>New Evente</h2>

                    <input id="eventTitleInput" placeholder="Event Title" />

                    <button id="saveButton"> Salvar</button>
                    <button id="cancelButton">Cancelar</button>
                </div>

                <div id="deleteEventModal">
                    <h2>Evento</h2>

                    <div id="eventText"></div><br>


                    <button id="deleteButton">Deletar</button>
                    <button id="closeButton">Fechar</button>
                </div>

                <div id="modalBackDrop"></div>
            </div>

            <div class="agenda">
                <h3 class="agenda-titulo">Agenda Escolar</h3>

                <div class="tarefas">
                    <div class="data">
                        <p class="data-tarefa">19/09</p>
                        <span class="data-tarefa_dia">segunda</span>
                    </div>

                    <p class="texto-tarefa">Lorem ipsum</p>
                </div>

                <div class="tarefas">
                    <div class="data">
                        <p class="data-tarefa">19/09</p>
                        <span class="data-tarefa_dia">segunda</span>
                    </div>

                    <p class="texto-tarefa">Lorem ipsum</p>
                </div>
            </div>
        </aside>

    </div>

    <!--Modal do botão Solicitar Serviço-->
    <div id="conteudo-btn-addEvento" class="modal-container">
        <button class="modalCard-fechar">Fechar</button>
        <div class="modalCard">
            <div class="modalCard-conteudo">
                <h2 class="conteudo-titulo">Adicionar Evento</h2>
                <div class="conteudo-form">
                    <div class="input-container">
                        <label for="nm_evento">Nome do Evento</label> <br>
                        <input type="text" name="nm_evento" id="nm_evento">
                    </div>

                    <div class="input-container">
                        <label for="data">Data do Evento</label> <br>
                        <input type="date" name="data" id="data">
                    </div>

                    <div class="input-container">
                        <label for="data">Data de Encerramento</label> <br>
                        <input type="date" name="data" id="data">
                    </div>


                </div>
                <button class="btn-adicionar">Adicionar</button>
            </div>
        </div>
    </div>


    <!--Área de Scripts-->
    <script src="~/js/menu.js"></script>
    <script src="~/js/modalAddEvento.js"></script>
    <script src="~/js/calen.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>

